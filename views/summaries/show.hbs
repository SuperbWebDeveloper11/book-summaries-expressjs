<div class="row">
  <div class="col s12 m8">
    <h3>{{summary.title}}
    </h3>
    <div class="card summary">
      <div class="card-content">
        {{{summary.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{summary.user.displayName}}</span>
        <img
          src="{{summary.user.image}}"
          class="circle responsive-img img-small"
        />
      </div>
      <div class="card-action">
        <a href="/stories/user/{{summary.user._id}}">More From
          {{summary.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>
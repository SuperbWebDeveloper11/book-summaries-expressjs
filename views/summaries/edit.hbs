<h3>Edit Story</h3>
<div class="row">
  <form action="/summaries/{{summary._id}}" method="POST">
  <input type="hidden" name="_method" value="PUT" />
  {{!-- title --}}
    <div class="form-group mb-5">
      <label for="title" class="form-label">Summary Title</label>
      <input type="text" name="title" class="form-control" id="title" value="{{summary.title}}"/>
    </div>

  {{!-- status --}}
<div class="form-group mb-5">
    <label for="status" class="form-label">Summary Status</label>
    <input class="form-control" name="status" list="datalistOptions" id="status" placeholder="Type status" value="{{summary.status}}"/>
    <datalist id="datalistOptions">
      <option value="public">
      <option value="private">
    </datalist>
</div>

  {{!-- body --}}

    <div class="form-group mb-5">
      <label for="body" class="form-label">Summary Body</label>
      <textarea class="form-control" id="body" rows="5" name="body">{{summary.body}}</textarea>
    </div>

    <div class="form-group row">
      <br>
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>